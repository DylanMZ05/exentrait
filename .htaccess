# public/.htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1) Servir archivos o carpetas existentes tal cual (assets, imágenes, etc.)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2) No tocar NADA de la carpeta /updates  (deja bajar .exe/.dmg/.AppImage)
  #    Si el archivo no existe, Apache devolverá 404 (no SPA).
  RewriteRule ^updates/ - [L]

  # 3) SPA fallback: todo lo demás -> index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Seguridad mínima opcional
Options -Indexes
